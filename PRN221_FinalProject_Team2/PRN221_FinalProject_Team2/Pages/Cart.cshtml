@page
@model PRN221_FinalProject_Team2.Pages.CartModel
@{
}
<h1>Page cart</h1>

<table class="table">
	<thead>
		<tr>
			<th>ProductId</th>
			<th>ProductName</th>
			<th>UnitPrice</th>
			<th>Quantity</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.cartItems)
		{
			<tr>
				<td>@item.ProductId</td>
				<td>@item.ProductName</td>
				<td>@item.UnitPrice</td>
				<td><input type="number" value="@item.Quantity" step="1" /></td>
			</tr>
		}
		<tr>
			<td></td>
			<td></td>
			<td></td>
			<td><button class="btn-success">Check Out</button></td>
		</tr>
	</tbody>
</table>
