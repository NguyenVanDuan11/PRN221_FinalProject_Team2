@page
@model PRN221_FinalProject_Team2.Pages.LoginModel

<div id="login-form" class="login">
    <h2>Login system</h2>
    
    <form method="post">
        <input asp-for="Account.Email" placeholder="Email(*)"/><br />
        <span asp-validation-for="Account.Email" style="color:red"></span><br />

        <input asp-for="Account.Password" placeholder="Password(*)"/><br />
        <span asp-validation-for="Account.Password" style="color:red" ></span><br />
        
        @{
            if (TempData["msg"] != null)
            {
                <p><span style="color: red">@TempData["msg"]</span></p>
            }
        }

        <button type="submit" value="SignIn" >Log In</button><br />
        You don't have account?<a href="Sigup">Create new account?</a>
    </form>
</div>

<style>
    .login{
        width: 400px;
        height: 600px;
        border: 1px solid grey;
        border-radius:10px;
        text-align: center;
        margin-left: 400px;
        margin-top: 100px;
    }
    h2{
        margin-top:20px;
        color: #868787;
        font-family: sans-serif;
    }

    .login input {
        width:200px;
        height:40px;
        margin-bottom:5px;
        border-radius:10px;
        margin-top: 30px;
    }

    .login button {
        width: 220px;
        height: 40px;
        margin-bottom: 20px;
        margin-top: 30px;
        border-radius: 10px;
        border: none;
        background-color: #45a049;
        color: white;

    }

    .login button:hover {
        font-size:15px;
    }
</style>